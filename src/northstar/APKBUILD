# Maintainer: pg9182 <96569817+pg9182@users.noreply.github.com>
pkgname=northstar
pkgver=1.6.0
pkgver_tf=2.0.11.0
pkgrel=0
pkgdesc="Northstar binaries and mods"

url="https://northstar.tf"
license="MIT"

arch="x86_64"
source="https://cpdt.dev/files/Northstar.release.v1.6.0-rc5.zip"

check() {
	ls "$srcdir"
	test -f "$srcdir/NorthstarLauncher.exe"
	test -f "$srcdir/R2Northstar/mods/Northstar.CustomServers/mod/cfg/autoexec_ns_server.cfg"
}

package() {
	rm "$srcdir"/*.zip
	rm -rf "$srcdir/bin"
	mkdir -p "$pkgdir/usr/lib/northstar"
	cp -r "$srcdir/." "$pkgdir/usr/lib/northstar/"
}
sha512sums="
4e1ae3ae836801fb02bc19336a45c8f93153c03d081fa916573e99cf5fd36de96dbfa41d2cf8e5a8cf77e45e6a723c63a574efdda891c265ef1efaf44460bdb2  Northstar.release.v1.6.0-rc5.zip
"
